# start greenclip (through rofi)
bindsym Ctrl+Mod1+c exec --no-startup-id rofi -modi "clipboard:/home/garamog/.local/bin/greenclip print" -show clipboard -run-command '{cmd}'

# kill focused window
bindsym $mod+Mod1+l exec betterlockscreen -l blur

# kill focused window
bindsym $mod+q kill

